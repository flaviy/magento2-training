<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content.top">
            <block class="Magento\Framework\View\Element\Template"
                   name="training.test2.first"
                   template="Training_Test2::first.phtml">
                <arguments>
                    <argument name="background_color" xsi:type="string">lightskyblue</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="header.links">
            <block class="Magento\Framework\View\Element\Html\Link" name="example.link" before="-">
                <arguments>
                    <argument name="label" xsi:type="string" translate="false">Example Page</argument>
                    <argument name="path" xsi:type="string">test/action/config</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>